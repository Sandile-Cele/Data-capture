@model Data_capture.Models.AspNetUser

@{
    ViewData["Title"] = "Create";
}

<h1>Login</h1>

<h4>Welcome back</h4>

<h4 style="color:red">@ViewBag.userNotFound</h4>

<div>
    <a asp-action="create">I don't have an account</a>
</div>

<div>
    <a asp-action="details">Logged in? View account details</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
